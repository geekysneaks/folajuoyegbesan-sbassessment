<section class="pdp-info" data-simple-accordion>
  <h2>{{ section.settings.heading }}</h2>

  {% assign info = product.metafields.custom.pdp_info.value %}
  {% if info != blank %}
    <details open>
      <summary>Info</summary>
      <div class="rte">{{ info }}</div>
    </details>
  {% else %}
    <p><small>No Info content set for this product yet.</small></p>
  {% endif %}
</section>

{% schema %}
{
  "name": "PDP - Info Accordion",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Info" }
  ]
}
{% endschema %}